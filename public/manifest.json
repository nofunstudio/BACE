{
  "name": "R3F Devtool",
  "description": "Inspect in 3D",
  "version": "1.0.0",
  "manifest_version": 2,
  "permissions": [ "contextMenus", "tabs" ],
  "devtools_page": "devtools.html",
  "background": {
    "service_worker": "/dist/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["/dist/contentbridge.js"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "/assets/R3F.png",
      "32": "/assets/R3F.png"
    },
    "default_popup": "index.html",
    "default_title": "Three.JS DevTool"
  },
  "icons": {
    "128": "/assets/R3F.png"
  },
  "web_accessible_resources": [{
    "resources": ["../src/content/*.ts"],
    "matches": ["<all_urls>"]
  }]
}